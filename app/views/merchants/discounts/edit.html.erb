<%= form_with model: [:merchant, @discount], url: merchant_discount_path(@merchant, @discount), local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage, placeholder: @discount.percentage %><br>

  <%= f.label :threshold %>
  <%= f.number_field :threshold, placeholder: @discount.threshold %><br>

  <%= f.submit 'Update Discount' %>
<% end %>
